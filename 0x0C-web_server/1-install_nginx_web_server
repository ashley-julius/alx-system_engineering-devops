#!/usr/bin/env bash
# This script configures nginx on our server

# update package lists and install nginx
apt-get -y update
apt-get -y install nginx

# Allow firewall to accept nginx http request
ufw allow 'Nginx HTTP'

# Allow full permissions
sudo chmod '0777' /var/www/html/index.html

# Writing the default page
echo "Hello World!" > /var/www/html/ubuntu_nginx_index.html

# restarting nginx
service nginx restart
